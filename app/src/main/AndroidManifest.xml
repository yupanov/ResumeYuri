<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.yupanov.resumeyuri">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_ycv"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_ycv"
        android:supportsRtl="true"
        android:theme="@style/Theme.ResumeYuri">
        <activity
            android:name=".FullscreenPhotoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen_photo"
            android:theme="@style/Theme.ResumeYuri.Fullscreen"></activity>
        <activity
            android:name=".InfoPagerActivity"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>